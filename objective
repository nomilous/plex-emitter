#!/usr/bin/env coffee

require('nez').objective 'plex-emitter', 

    assignTo: 'me'
    description: """

    pupsub with promises (which, i guess, is not longer strictly pubsub)

    """, (requirements) -> 

        requirements 'subscribers provide promise handlers and timeout config'
        requirements 'publishers provide a final handler'
        requirements 'subscribers registered as optional do not prevent the call to final handler'
        
